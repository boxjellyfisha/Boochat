<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="#f1e8ff"
    android:id="@+id/nl"
    android:elevation="3dp">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:id="@+id/n_s1"
        android:layout_gravity="top|center_vertical"
        android:layout_marginRight="10dp"
        android:foreground="@color/tabsScroll"
        android:foregroundGravity="top"
        android:background="#c9e8ff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/nl2"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="device_name"
            android:id="@+id/n_device_name"
            android:textColor="#be4b2e56"
            android:textAlignment="inherit"
            android:singleLine="true"
            android:layout_gravity="left|center"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="hugl"
            android:id="@+id/n_content"
            android:singleLine="false"
            android:layout_gravity="left|center"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="mm/dd"
            android:id="@+id/n_date"
            android:layout_gravity="bottom|right"
            android:textSize="12dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:id="@+id/n_s2"
        android:layout_gravity="top|center_vertical"
        android:layout_marginLeft="10dp"
        android:foreground="@color/tabsScroll"
        android:foregroundGravity="top"
        android:background="#c9e8ff" />

</LinearLayout>