<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:background="@drawable/cmesc5"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:layout_toLeftOf="@+id/imageView8"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView5"
                android:src="@android:drawable/sym_action_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sender: "
                android:id="@+id/textView10"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:textColor="#b8a8c8" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="123"
            android:id="@+id/textSender"
            android:layout_marginLeft="40dp"
            android:layout_gravity="left"
            android:textSize="14dp"
            android:textColor="#663495" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionGroup="false"
            android:layout_marginLeft="0dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView6"
                android:src="@android:drawable/sym_action_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Receiver: "
                android:id="@+id/textView11"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:textColor="#b8a8c8" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="red"
            android:id="@+id/textReceiver"
            android:singleLine="false"
            android:layout_marginLeft="40dp"
            android:layout_gravity="left"
            android:textSize="14dp"
            android:textColor="#663495" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView7"
                android:src="@android:drawable/sym_action_email"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Content: "
                android:id="@+id/textView12"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:textColor="#b8a8c8" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="hello!"
            android:id="@+id/textContent"
            android:layout_marginLeft="40dp"
            android:layout_gravity="left"
            android:textSize="14dp"
            android:textColor="#663495" />

    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/imageView8"
        android:src="@drawable/fg"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="10dp"
        android:scaleType="fitStart" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/glidetest"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2" />
</RelativeLayout>